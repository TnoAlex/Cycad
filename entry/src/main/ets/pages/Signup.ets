import router from '@ohos.router';
import log from '../common/cycadLog'

@Entry
@Component
struct Signup {
  @State roleSelect: SelectOption[] = [{ value: "医生", icon: $r('app.media.doctor') }, {
    value: "家属",
    icon: $r('app.media.families')
  }, { value: "患者", icon: $r('app.media.patient') }]
  private userName: string = null
  private password: string = null
  private confirmPassword: string = null
  private phoneNumber: string = null
  private role = 0
  /**
   * In low-code mode, do not add anything to the build function, as it will be
   * overwritten by the content generated by the .visual file in the build phase.
   */
  build() {

  }

  onUserNameChange(value: string) {
    this.userName = value
  }

  onPasswordChange(value: string) {
    this.password = value
  }

  onConfirmPasswordChange(value: string) {
    this.confirmPassword = value
  }

  onPhoneNumberChange(value: string) {
    this.phoneNumber = value
  }

  onSelectChange(index: number) {
    this.role = index
  }

  onPageShow() {
    log.info("on SignUp page")
  }

  toLogin() {
    log.info("to Login page")
    router.back()
  }

  doSignup() {
    log.info("do Signup")
    log.debug("username: " + this.userName + "password: " + this.password + "phone: " + this.phoneNumber + "role: " + this.role)
  }
}
