import log from '../common/cycadLog'
import router from '@ohos.router';

@Entry
@Component
struct Login {
  @State isGoBackShow: boolean = true
  private userName:string = null
  private password:string = null
  /**
   * In low-code mode, do not add anything to the build function, as it will be
   * overwritten by the content generated by the .visual file in the build phase.
   */
  build() {

  }

  onPageShow(){
    log.info("in Login page")
    if(router.getState().index == 1){
      this.isGoBackShow = false
    }else{
      this.isGoBackShow = true
    }
  }

  onUserNameInputChange(value){
    this.userName = value
  }

  onPasswordChange(value){
    this.password = value
  }

  goBack(){
    log.info("leave login, back")
    router.back()
  }

  forgetPassword(){
    log.info("to forgetPassword")
  }

  doLogin(){
    log.info("do login action")
    log.debug("username:"+this.userName+"password:"+this.password)
  }

  toSignUp(){
    log.info("leave login,to Signup")
    router.pushUrl({url:"pages/Signup"})
  }

  aliPayLogin(){
    log.info("leave login,to AliPay Login")
  }

  weChatLogin(){
      log.info("leave login,to WeChat Login")
  }
}
